{
  "manifest_version": 3,
  "name": "NoCoffee",
  "description": "NoCoffee vision simulator",
  "version": "0.5.0",
  "homepage_url":"http://accessgarage.wordpress.com/2013/02/09/458/",

  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "NoCoffee vision simulator"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "overlays/*.png"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
