{
  "manifest_version": 3,
  "name": "NoCoffee",
  "description": "NoCoffee vision simulator",
  "version": "0.5.0",
  "homepage_url":"http://accessgarage.wordpress.com/2013/02/09/458/",

  "browser_specific_settings": {
    "gecko": {
      "id": "nocoffee@accessgarage.wordpress.com",
      "strict_min_version": "42.0"
    }
  },

  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },

  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },

  "action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "NoCoffee vision simulator"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["browser-polyfill.js", "contentscript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "https://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "overlays/*.png",
        "popup.css"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
